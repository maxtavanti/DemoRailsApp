<p id="notice"><%= notice %></p>

<h1>
	Listing Events
	<%= link_to new_event_path, class: 'btn btn-primary pull-right' do %>
		<i class="fa fa-plus"></i>
	<% end %>
</h1>

<br/>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Date start</th>
      <th>Date end</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.date_start %></td>
        <td><%= event.date_end %></td>
        <td>
			<%= link_to event, class: 'btn btn-xs' do %>
				<i class="fa fa-eye"></i>
			<% end %>
		</td>
        <td>
			<%= link_to edit_event_path(event), class: 'btn btn-xs' do %>
				<i class="fa fa-pencil"></i>
			<% end %>
		</td>
        <td>
			<%= link_to event, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs' do %>
				<i class="fa fa-trash"></i>
			<% end %>
		</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
